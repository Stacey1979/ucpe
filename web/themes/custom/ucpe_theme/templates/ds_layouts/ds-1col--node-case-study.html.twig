{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}


<div class="hero_wrapper hero_full">
  {{ ds_content.field_hero}}
</div>
<div class="content_wrapper">
    <div class="casestudy">
      <div class="content">
        <div class="casestudy_top">
          <div class="meta">
            <p><span class="type">{{ ds_content.field_case_study_type|field_value }}</span><span class="divider">|</span><span class="cs_title">Case Study</span></p>
          </div>
          <h1>{{ title|field_value }}</h1>
          <div class="lede">
            <p>{{ ds_content.field_lede|field_value }}</p>
          </div>
          <div class="share">
            {{ ds_content.addtoany }}
          </div>
          <div class="summary">
            <div class="challenge col">
              <h3>{{ ds_content.field_challenge|field_label }}</h3>
              <p>{{ ds_content.field_challenge|field_value }}</p>
            </div>
            <div class="solution col">
              <h3>{{ ds_content.field_solution|field_label }}</h3>
              <p>{{ ds_content.field_solution|field_value }}</p>
            </div>
            <div class="result col">
              <h3>{{ ds_content.field_results|field_label }}</h3>
              <p>{{ ds_content.field_results|field_value }}</p>
            </div>
          </div>
          <div class="intro">
            {{ ds_content.field_intro_paragraph|field_value }}
          </div>
        </div>
        <div class="casestudy_bottom">
        {{ ds_content|without('field_hero','field_case_study_type','field_lede','addtoany','field_challenge','field_solution','field_results','field_intro_paragraph','field_partnership_logos','field_about_partnership') }}
        </div>
        <div class="partnership">
          <hr/>
          <div class="partnership_content">
            <h3>{{ ds_content.field_about_partnership|field_label }}</h3>
            <div class="description">
              <p>{{ ds_content.field_challenge|field_value }}</p>
            </div>
            <div class="sponsors">
                {% for key, item in ds_content.field_partnership_logos|children %}
                  <div class="sponsor_img">{{ item }}</div>
                {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
