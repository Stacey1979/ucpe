{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}


<div class="hero_wrapper">
  {{ ds_content.field_hero}}
</div>
<div class="content_wrapper">
    <div class="casestudy">
      <div class="content">
        <div class="casestudy_top">
          <div class="meta">
            <p><span class="type">{{ ds_content.field_case_study_type|field_value }}</span><span class="divider">|</span><span class="cs_title">Case Study</span></p>
          </div>
          <h1>{{ title|field_value }}</h1>
          <div class="lede">
            <p>{{ ds_content.field_lede|field_value }}</p>
          </div>
          <div class="share">
            {{ ds_content.addtoany }}
          </div>
          <div class="summary">
            <div class="challenge col">
              <h3>Challenge</h3>
              <p>Help teams rethink their approach to product innovation within a longstanding financial services institution.</p>
              {{ ds_content.summary.field_challenge|field_value }}
            </div>
            <div class="solution col">
              <h3>Solutions</h3>
              <p>A five-week course focused on innovation, service delivery, agile project management, and lean development</p>
              {{ ds_content.field_solution|field_value }}
            </div>
            <div class="result col">
              <h3>Results</h3>
              <p>Product teams have a stronger theoretical and practical basis for implementing change in Capital One's product suite.</p>
              {{ ds_content.field_results|field_value }}
            </div>
          </div>
          <div class="intro">
            {{ ds_content.field_intro_paragraph|field_value }}
          </div>
        </div>
        <div class="casestudy_bottom">
        {{ ds_content }}
        </div>
