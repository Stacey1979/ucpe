{#
/**
 * @file
 * Display Suite 1 column template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}
<div class="relatedCourse">
  <div class="relatedCourse_hdr">
    <h4>{{ title|field_value }}</h4><span class="divider"> | </span><span class="course_code">{{ ds_content.field_course_code|field_value }}
  </div>
  <div class="relatedCourse_content">
    <p>{{ ds_content.field_course_summary|field_value }}</p>
    {{ ds_content.field_view_upcoming_courses|field_value }}
  </div>
</div>
