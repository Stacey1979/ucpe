{#
/**
 * @file
 * Default theme implementation to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}

{% if content %}

      {{ title_prefix }}
      {{ title_suffix }}
      <div class="col">
        <div class="top">
          {{ content.top }}
				</div>
				<div class="bottom">
          <h3>{{ content.bottom.field_three_up_title|field_value }}</h3>
					<div class="blurb">
						{{ content.bottom.field_three_up_short_description|field_value }}
					</div>
				</div>
			</div>

{% endif %}
